    <%= form.label :room_id %>
    <%= form.collection_select :room_id, Room.all, :id, :number, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
